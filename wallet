  <script>
    async function connectWallet() {
      if (typeof window.ethereum === 'undefined') {
        document.getElementById('wallet-status').innerText = '‚ö†Ô∏è MetaMask is niet ge√Ønstalleerd.';
        return;
      }

      try {
        const [account] = await ethereum.request({ method: 'eth_requestAccounts' });
        const provider = new ethers.providers.Web3Provider(window.ethereum);
        const signer = provider.getSigner();
        const tokenAddress = '0x1c907176ee3920d41e9afc497148de62fca48893';
        const abi = ["function balanceOf(address) view returns (uint256)"];
        const contract = new ethers.Contract(tokenAddress, abi, signer);

        const balance = await contract.balanceOf(account);
        const readableBalance = Number(balance) / 1e9; // 9 decimalen

        if (readableBalance >= 10) {
          document.getElementById('access-area').style.display = 'block';
          document.getElementById('wallet-status').innerText = `‚úÖ Wallet verbonden. Tokens: ${readableBalance}`;
        } else {
          document.getElementById('wallet-status').innerText = `üîí Je hebt ${readableBalance} TRIUWA. Minimaal 10 nodig.`;
        }
      } catch (error) {
        console.error(error);
        document.getElementById('wallet-status').innerText = '‚ö†Ô∏è Verbinden mislukt.';
      }
    }
  </script>

  <!-- Ethers.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/ethers@5.7.2/dist/ethers.umd.min.js"></script>
